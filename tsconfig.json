{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "allowImportingTsExtensions" : true,
    "resolveJsonModule": true
    // Removed "type": "module" as it's not a standard compiler option
    // Removed "types": ["bun-types"] to align with Deno
  },
  "exclude": [
    "node_modules" // Exclude node_modules if present
  ]
}
